class Solution {
    public int findMaxLength(int[] nums) {
        HashMap<Integer,Integer> map = new HashMap<>();
        int sum=0;
        int max=0;
        for(int i=0;i<nums.length;i++){
            if(nums[i] == 0){
                nums[i] = -1;
            }
        }
        map.put(0,-1);
        for(int j=0;j<nums.length;j++){
            sum += nums[j];
            if(map.containsKey(sum)){
                max = Math.max(max, j-map.get(sum));
            }
            else{
                map.put(sum,j);
            }
        }
        return max;
    }
}
