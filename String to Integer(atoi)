class Solution {
    public int myAtoi(String s) {
        s = s.trim();//removes the uncessary white spaces
        if(s.isEmpty()){
            return 0;//if string is empty return 0
        }
        int i=0;
        int sign = 1;//intailly the sign is 1
        if(s.charAt(i) == '-' || s.charAt(i) == '+'){
            sign = (s.charAt(i) == '-')?-1:1;//if the sign is - or + then the sign vriable is made as -1or+1
            i++;//i is incremented at each interval
        }
        long num=0;
        while(i<s.length() && Character.isDigit(s.charAt(i))){//if i <s.length and i index is an digit 
        //then subract it from '0' which has value 97 and then it converts the character to number
            num = num*10 + (s.charAt(i)- '0');
            if(num*sign > Integer.MAX_VALUE){
                return Integer.MAX_VALUE;
                //if sign*num is greater than Integer.MAX_VALUE then return 
                //the higher range Integer.MAX_VALUE;
            }
            if(num*sign<Integer.MIN_VALUE){
                return Integer.MIN_VALUE;
                //if sign*num is less than Integer.MAX_VALUE then return
                //the lower range Integer.MIN_VALUE;
            }
            i++;//i is incremented at each iteration
        } 
        return (int)(sign*num);  
    }
}
