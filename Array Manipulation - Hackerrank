public static long arrayManipulation(int n, List<List<Integer>> queries) {
    // Write your code here
    long []ar = new long[n+2];
    for(List<Integer> q : queries){
        int a = q.get(0);
        int b = q.get(1);
        int k = q.get(2);
        
        ar[a] += k;
        ar[b+1] -= k;
    }
    long max=0;
    long cur=0;
    for(int i=0;i<ar.length;i++){
        cur += ar[i];
        max = Math.max(max,cur);
    }
    return max;
    
    }

}
