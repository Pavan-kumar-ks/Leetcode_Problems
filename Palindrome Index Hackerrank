public static int palindromeIndex(String s) {
        int left =0;
        int right = s.length()-1;
        while(left<right){
            if(s.charAt(left) != s.charAt(right)){
                if(ispalind(s,left+1,right)){
                    return left;
                }
                if(ispalind(s,left,right-1)){
                    return right;
                }
            }
            left++;
            right--;
        }
        return -1;
    }
    public static boolean ispalind(String s,int left,int right){
        while(left<right){
            if(s.charAt(left) != s.charAt(right)){
                return false;
            }
            left++;
            right--;
        }
        return true;
        
    }
