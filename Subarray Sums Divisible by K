class Solution {
    public int subarraysDivByK(int[] nums, int k) {
        HashMap<Integer,Integer> map = new HashMap<>();
        map.put(0,1);
        int psum =0;
        int c=0;
        for(int n:nums){
            psum += n;
            int mod = ((psum%k)+k)%k;
            c += map.getOrDefault(mod,0);
            map.put(mod,map.getOrDefault(mod,0)+1);
        }
        return c;
    }
}
