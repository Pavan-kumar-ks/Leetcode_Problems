/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public int goodNodes(TreeNode root) {
        return dfs(root,root.val);
    }
    public int dfs(TreeNode root,int maxy){
        if(root == null){
            return 0;
        }
        int c=0;
        if(root.val>=maxy){
            c=1;
        }
        int newmax = Math.max(root.val,maxy);
        c += dfs(root.left,newmax);
        c += dfs(root.right,newmax);
        return c;
    }
}
